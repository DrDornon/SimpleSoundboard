<Page
    x:Class="SimpleSoundboard.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimpleSoundboard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="button" Content="My Roflcopter" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <Button x:Name="button_Copy" Content="LOLOLOL" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" Click="button_Copy_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="10,104,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="340"/>
        <Button x:Name="button1" Content="Say your phrase" HorizontalAlignment="Left" Margin="131,141,0,0" VerticalAlignment="Top" Click="button1_Click"/>

    </Grid>
</Page>
